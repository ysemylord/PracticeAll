<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.viewdemo.viewPager.verifyFragmentManager.VerifyFragmentTranctionActivity">
  <Button
      android:text="onlyAddFragment"
      android:onClick="onlyAddFragment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="addFragment"
      android:onClick="addFragment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="detachFragment"
      android:onClick="detachFragment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
