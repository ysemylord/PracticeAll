<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="188dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mc_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="询问"
        android:textColor="#080808"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/mc_content_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否确认退出听儿歌"
        android:textSize="14sp"
        android:textColor="#1D1D1D"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mc_title_textview"/>

    <TextView
        android:id="@+id/mc_cancel_textview"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:paddingTop="4dp"
        android:textSize="16sp"
        android:textColor="#FF4D4D"
        android:paddingBottom="4dp"
        android:text="取消"
        app:layout_constraintEnd_toStartOf="@+id/mc_confirm_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mc_content_textview"/>

    <TextView
        android:id="@+id/mc_confirm_textview"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="16sp"
        android:textColor="#3f7ff2"
        android:text="确认"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mc_cancel_textview"
        app:layout_constraintTop_toBottomOf="@+id/mc_content_textview"/>
    <View
        android:background="#e4e4e4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mc_cancel_textview"
        android:layout_width="0dp"
        android:id="@+id/line1"
        android:layout_height="1dp"></View>
    <View
        android:layout_width="1dp"
        android:background="#e4e4e4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"></View>
</android.support.constraint.ConstraintLayout>