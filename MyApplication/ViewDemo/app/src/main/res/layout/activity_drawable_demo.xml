<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.viewdemo.drawableDemo.DrawableDemoActivity">
  <Button
      android:layout_width="wrap_content"
      android:text="change enable"
      android:onClick="changeEnable"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/my_checkbox"
      android:id="@+id/button9"/>
  <com.test.viewdemo.drawableDemo.MyCheckBox
      android:textColor="@color/check_btn_color"
      android:text="erer"
      android:id="@+id/my_checkbox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="16dp"/>

  <TextView
      android:background="@drawable/all_todo_clip_drawable"
      android:id="@+id/clip_bg_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="TextView"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/button9"/>
</android.support.constraint.ConstraintLayout>
