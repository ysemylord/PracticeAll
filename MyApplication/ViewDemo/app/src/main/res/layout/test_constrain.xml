<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="100dp"
    android:paddingBottom="15dp"
    tools:layout_width="280dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/plat_price_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center"

        android:textColor="#ff3939"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="¥14.44"/>


    <ImageView
        android:id="@+id/buy_image_view"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="4dp"
        android:src="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plat_price_textView"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/buy_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/plat_price_textView"
        app:layout_constraintRight_toLeftOf="@id/buy_image_view"
        tools:text="第四第四点一二三四五六七八九十十一二三四五六七"/>

        </android.support.constraint.ConstraintLayout>