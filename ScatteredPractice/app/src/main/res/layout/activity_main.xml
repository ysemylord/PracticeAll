<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xuyabo.scatteredpractice.BitmapFactoryPracticeActivity">

    <ImageView
        android:id="@+id/image_view_1"
        android:layout_width="200px"
        android:layout_height="200px"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/button"
        android:onClick="addResDrawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载项目中的图片资源"
        tools:layout_editor_absoluteX="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/image_view_1" />

    <Button
        android:onClick="loadSDImage"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载手机中的图片文件"
        tools:layout_editor_absoluteX="37dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</android.support.constraint.ConstraintLayout>
